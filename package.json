{
  "name": "node-redis-web",
  "version": "1.0.0",
  "description": "Redis管理工具 - 基于Node.js和Vue3开发",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "build:server": "node build-server.js",
    "build:tgz": "node build-tgz.js",
    "build:web": "cd client && npm run build && mkdir -p ../build && cp -r build/web ../build/",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:win": "node build-tauri.js win",
    "tauri:build:mac": "node build-tauri.js mac",
    "tauri:build:linux": "node build-tauri.js linux",
    "tauri:build:prod": "node build-tauri-prod.js",
    "tauri:build:prod:win": "node build-tauri-prod.js win",
    "tauri:build:prod:mac": "node build-tauri-prod.js mac",
    "tauri:build:prod:linux": "node build-tauri-prod.js linux",
    "build:electron": "node build-electron.js",
    "build:electron:win": "node build-electron.js win",
    "build:electron:mac": "node build-electron.js mac",
    "build:electron:linux": "node build-electron.js linux",
    "install-all": "npm install && cd client && npm install",
    "docs": "apidoc -i server/ -o docs/",
    "docs:serve": "apidoc -i server/ -o docs/ && http-server docs/ -p 8080"
  },
  "keywords": [
    "redis",
    "management",
    "node",
    "vue3"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.10",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "apidoc": "^1.2.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.12",
    "nodemon": "^3.0.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.redis.web",
    "productName": "Redis管理工具",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "server/**/*",
      "client/dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Redis管理工具"
    }
  }
}
